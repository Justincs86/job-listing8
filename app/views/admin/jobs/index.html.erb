<div class="pull-right">
  <button class="btn btn-primary">
    <%= link_to("Add a Job", new_admin_job_path) %>
  </button>
</div>
<br><br><br>


<table class="table table-bordered">
  <thead>
      <tr>
          <th> Title</th>
          <th> Description</th>
          <th> Option</th>
      </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
          <td> <%= link_to(job.title, job_path(job)) %> </td>
          <td> <%= job.description %></td>
          <td>
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-success") %>
            <%= link_to("Delete", admin_job_path(job), method: :delete, :data => { :confirm => "Are you sure?" }, class: "btn btn-danger") %>
          </td>
      </tr>
    <% end %>
  </tbody>

</table>
